{
  "name": "electron-dorico-fixer",
  "version": "1.0.0",
  "description": "Fix MusicXML files using DoricoFixer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . DoricoFixer --platform=win32 --arch=x64 --icon=assets/icon.ico --overwrite",
    "build-mac": "electron-packager . DoricoFixer --platform=darwin --arch=x64 --overwrite",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.seppehr.doricofixer",
    "productName": "Dorico Fixer",
    "publish": {
      "provider": "github",
      "owner": "seppehr-com",
      "repo": "electron-dorico-fixer"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "dorico_ss_fix_lib.js",
      "assets/**/*",
      "build/**/*.json",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "build/*.json"
    ],
    "extraResources": [
      {
        "from": "build/",
        "to": "build",
        "filter": [
          "*.json"
        ]
      }
    ]
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.9.8",
    "fast-xml-parser": "^5.2.5",
    "vkbeautify": "^0.99.3"
  }
}
